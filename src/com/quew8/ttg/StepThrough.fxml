<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quew8.ttg.StepThroughController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="Logical Function" />
      <TextField fx:id="funcField" promptText="Function" />
      <HBox spacing="10.0">
         <children>
            <Button fx:id="genButton" mnemonicParsing="false" text="Generate" />
            <Button fx:id="stepButton" mnemonicParsing="false" text="Step" />
         </children>
         <!--<VBox.margin>
            <Insets />
         </VBox.margin>-->
      </HBox>
      <Separator prefWidth="200.0" />
      <TextField fx:id="outputField" editable="false">
         <font>
            <Font name="Monospaced Regular" size="12.0" />
         </font>
      </TextField>
      <HBox spacing="10.0">
         <children>
            <Label text="Variable" />
            <TextField fx:id="varField" promptText="Variable" />
         </children>
      </HBox>
   </children>
</VBox>
